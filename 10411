    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Get all menu links
            const menuLinks = document.querySelectorAll('.sub-menu a, .sub-sub-menu a, .menu-item > a');
            
            // Add click event listeners to all menu links
            menuLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // Get the content ID from the data attribute
                    const contentId = this.getAttribute('data-content');
                    
                    // Hide all content sections
                    document.querySelectorAll('.content-section').forEach(section => {
                        section.classList.remove('active');
                    });
                    
                    // Show the selected content section
                    if (contentId) {
                        document.getElementById(contentId).classList.add('active');
                    }
                });
            });
            
            // Login type selection
            const loginOptions = document.querySelectorAll('.login-option');
            const userTypeContents = document.querySelectorAll('.user-type-content');
            
            loginOptions.forEach(option => {
                option.addEventListener('click', function() {
                    // Remove active class from all options
                    loginOptions.forEach(opt => opt.classList.remove('active'));
                    // Add active class to clicked option
                    this.classList.add('active');
                    
                    // Hide all user type contents
                    userTypeContents.forEach(content => content.classList.remove('active'));
                    
                    // Show the selected user type content
                    const userType = this.getAttribute('data-user-type');
                    document.getElementById(`${userType}-login`).classList.add('active');
                });
            });
            
            // Form submission handlers
            document.getElementById('admissionForm').addEventListener('submit', function(e) {
                e.preventDefault();
                alert('Thank you for submitting your application! We will review it and contact you soon.');
                this.reset();
            });
            
            document.getElementById('inquiryForm').addEventListener('submit', function(e) {
                e.preventDefault();
                alert('Thank you for your inquiry! We will respond to your message within 2 business days.');
                this.reset();
            });
            
            document.getElementById('suggestionForm').addEventListener('submit', function(e) {
                e.preventDefault();
                alert('Thank you for your suggestion! We appreciate your feedback and will consider it carefully.');
                this.reset();
            });
            
            document.getElementById('paymentForm').addEventListener('submit', function(e) {
                e.preventDefault();
                alert('Payment submitted successfully! A confirmation email has been sent to your registered email address.');
                this.reset();
            });
            
            // Login form submissions
            document.getElementById('studentLoginForm').addEventListener('submit', function(e) {
                e.preventDefault();
                alert('Student login functionality would be implemented here.');
            });
            
            document.getElementById('teacherLoginForm').addEventListener('submit', function(e) {
                e.preventDefault();
                alert('Teacher login functionality would be implemented here.');
            });
            
            document.getElementById('parentLoginForm').addEventListener('submit', function(e) {
                e.preventDefault();
                alert('Parent login functionality would be implemented here.');
            });
            
            document.getElementById('adminLoginForm').addEventListener('submit', function(e) {
                e.preventDefault();
                alert('Administrator login functionality would be implemented here.');
            });
            
            // Add event listeners for action buttons in tables
            document.querySelectorAll('.action-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const buttonText = this.textContent;
                    if (buttonText === 'View' || buttonText === 'View Details') {
                        alert('Detailed information would be displayed here.');
                    } else if (buttonText === 'Register' || buttonText === 'Apply Now' || buttonText === 'Renew Now') {
                        alert('Registration/application process would begin here.');
                    } else if (buttonText === 'Join Waitlist') {
                        alert('You have been added to the waitlist for this course.');
                    } else if (buttonText === 'Renew') {
                        alert('Renewal process would begin here.');
                    } else if (buttonText === 'Borrow Again') {
                        alert('This item would be added to your borrowing list.');
                    } else if (buttonText === 'Enter') {
                        alert('You would be redirected to the course page.');
                    } else if (buttonText === 'Report Issue') {
                        alert('Issue reporting form would open here.');
                    } else if (buttonText === 'Add Funds') {
                        alert('Payment form would open to add funds to your account.');
                    } else if (buttonText === 'Change Plan') {
                        alert('Plan selection interface would appear here.');
                    } else if (buttonText === 'Select Plan') {
                        alert('You have selected this meal plan. Proceeding to payment...');
                    } else if (buttonText === 'Schedule Tour' || buttonText === 'View Map' || buttonText === 'Safety Info' || buttonText === 'Virtual Tour') {
                        alert('This feature would be implemented in a full application.');
                    } else if (buttonText === 'Reserve') {
                        alert('Facility reservation process would begin here.');
                    }
                });
            });
        });
    </script>
</body>
</html>