            h1 {
                font-size: 2rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>Multi-Iframe Dashboard</h1>
            <p class="subtitle">Monitor multiple web resources in one place</p>
        </header>

        <div class="controls">
            <button id="refreshAll">Refresh All</button>
            <button id="toggleLayout">Toggle Layout</button>
            <button id="fullscreenMode">Fullscreen Mode</button>
        </div>

        <div class="iframe-container">
            <div class="iframe-wrapper">
                <div class="iframe-header">
                    <span class="iframe-title">Wikipedia</span>
                    <div class="iframe-actions">
                        <button class="refresh-btn">Refresh</button>
                    </div>
                </div>
                <iframe src="https://en.wikipedia.org/wiki/Main_Page" title="Wikipedia"></iframe>
            </div>

            <div class="iframe-wrapper">
                <div class="iframe-header">
                    <span class="iframe-title">GitHub</span>
                    <div class="iframe-actions">
                        <button class="refresh-btn">Refresh</button>
                    </div>
                </div>
                <iframe src="https://github.com" title="GitHub"></iframe>
            </div>

            <div class="iframe-wrapper">
                <div class="iframe-header">
                    <span class="iframe-title">MDN Web Docs</span>
                    <div class="iframe-actions">
                        <button class="refresh-btn">Refresh</button>
                    </div>
                </div>
                <iframe src="https://developer.mozilla.org/en-US/" title="MDN Web Docs"></iframe>
            </div>

            <div class="iframe-wrapper">
                <div class="iframe-header">
                    <span class="iframe-title">Stack Overflow</span>
                    <div class="iframe-actions">
                        <button class="refresh-btn">Refresh</button>
                    </div>
                </div>
                <iframe src="https://stackoverflow.com" title="Stack Overflow"></iframe>
            </div>
        </div>

        <footer>
            <p>Multi-Iframe Dashboard &copy; 2023 | All external content belongs to their respective owners</p>
        </footer>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Refresh all iframes
            document.getElementById('refreshAll').addEventListener('click', function() {
                const iframes = document.querySelectorAll('iframe');
                iframes.forEach(iframe => {
                    iframe.src = iframe.src;
                });
            });

            // Toggle layout between grid and single column
            document.getElementById('toggleLayout').addEventListener('click', function() {
                const container = document.querySelector('.iframe-container');
                container.classList.toggle('single-column');
                
                if (container.classList.contains('single-column')) {
                    container.style.gridTemplateColumns = '1fr';
                    this.textContent = 'Grid Layout';
                } else {
                    container.style.gridTemplateColumns = 'repeat(auto-fit, minmax(400px, 1fr))';
                    this.textContent = 'Single Column';
                }
            });

            // Fullscreen mode for iframes
            document.getElementById('fullscreenMode').addEventListener('click', function() {
                const iframeWrappers = document.querySelectorAll('.iframe-wrapper');
                iframeWrappers.forEach(wrapper => {
                    wrapper.style.height = wrapper.style.height === '80vh' ? 'auto' : '80vh';
                });
                
                if (iframeWrappers[0].style.height === '80vh') {
                    this.textContent = 'Normal View';
                } else {
                    this.textContent = 'Fullscreen Mode';
                }
            });

            // Individual iframe refresh buttons
            document.querySelectorAll('.refresh-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const iframe = this.closest('.iframe-wrapper').querySelector('iframe');
                    iframe.src = iframe.src;
                });
            });
        });
    </script>
</body>
</html>
``